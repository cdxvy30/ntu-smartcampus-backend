{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": "off",
        "nonblock-statement-body-position": "off",
        "no-underscore-dangle": "off",
        "curly": "off",
        "no-throw-literal": "off",
        "no-restricted-syntax": "off",
        "array-callback-return": "off",
        "no-continue": "off",
        "no-loop-func": "off",
        "no-use-before-define": "off",
        "import/prefer-default-export": "off",
        "no-await-in-loop": "off" // remains to be modified
    }
}
